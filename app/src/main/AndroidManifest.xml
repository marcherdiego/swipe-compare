<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.marcherdiego.swipecompare">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SwipeCompare">
        <activity
            android:name="com.github.marcherdiego.swipecompare.ui.activities.HorizontalSwipeActivity"
            android:label="Horizontal comparison"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name="com.github.marcherdiego.swipecompare.ui.activities.VerticalSwipeActivity"
            android:label="Vertical comparison"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name="com.github.marcherdiego.swipecompare.ui.activities.CrosshairSwipeActivity"
            android:label="Crosshair comparison"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".ui.activities.MainActivity"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
