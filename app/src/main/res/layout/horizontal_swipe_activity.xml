<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/bar_width_slider_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/bar_width_slider"
        android:text="Bar width: 1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/bar_width_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:value="1"
        android:valueFrom="0"
        android:valueTo="100"
        app:layout_constraintTop_toBottomOf="@+id/bar_width_slider_label"/>

    <com.github.marcherdiego.swipecompare.core.HorizontalSwipeCompareLayout
        android:id="@+id/horizontal_swipe_compare_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_divider"
        app:layout_constraintTop_toBottomOf="@+id/bar_width_slider"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <EditText
        android:id="@+id/slider_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Slider X"
        android:inputType="number"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_divider"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/fixed_slider_icon_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Fixed slider icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_divider"/>

    <com.github.marcherdiego.swipecompare.core.HorizontalSwipeCompareLayout
        android:id="@+id/horizontal_swipe_compare_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fixed_slider_icon_switch"/>

</androidx.constraintlayout.widget.ConstraintLayout>
